@model DAL.Entities.User

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-person-vcard"></i> Thông tin cá nhân</h4>
                    <a asp-action="EditProfile" class="btn btn-light btn-sm text-primary fw-bold">
                        <i class="bi bi-pencil-square"></i> Cập nhật
                    </a>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-3 fw-bold text-muted">Họ và tên:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext fw-bold fs-5 mb-0">@Model.FullName</p>
                        </div>
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-3 fw-bold text-muted">Email:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext mb-0">@Model.Email</p>
                        </div>
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-3 fw-bold text-muted">Số điện thoại:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext mb-0">@(Model.Phone ?? "Chưa cập nhật")</p>
                        </div>
                    </div>
                    <div class="row mb-3 align-items-start">
                        <label class="col-sm-3 fw-bold text-muted mt-2">Địa chỉ:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext mb-0" style="white-space: pre-line;">@(Model.Address ?? "Chưa cập nhật")</p>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <div class="d-flex justify-content-end">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>