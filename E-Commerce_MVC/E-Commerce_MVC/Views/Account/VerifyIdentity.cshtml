@model BLL.DTOs.EkycRequestViewModel
@{
    ViewData["Title"] = "Xác thực danh tính";
}

<div id="ai-loading" class="position-fixed top-0 start-0 w-100 h-100 d-none justify-content-center align-items-center"
     style="background: rgba(255,255,255,0.8); z-index: 9999;">
    <div class="text-center">
        <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;"></div>
        <h5 class="mt-3 text-success fw-bold">Đang xác thực danh tính...</h5>
        <small>Vui lòng không tắt trình duyệt</small>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4><i class="bi bi-person-check-fill"></i> Xác thực & Nâng cấp tài khoản</h4>
                </div>
                <div class="card-body">
                    <form asp-action="VerifyIdentity" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> Lưu ý: Thông tin bạn nhập bên dưới phải <strong>trùng khớp hoàn toàn</strong> với ảnh CCCD tải lên.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập đúng như trên CCCD" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số CCCD</label>
                                <input asp-for="CccdNumber" class="form-control" placeholder="12 số" />
                                <span asp-validation-for="CccdNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Ngày sinh</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Địa chỉ thường trú</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <div class="mb-3">
                            <label class="form-label fw-bold text-primary">Tải lên ảnh mặt trước CCCD để đối chiếu</label>

                            <input asp-for="FrontImage" type="file" class="form-control" accept="image/*" onchange="previewImage(this)" />
                            <span asp-validation-for="FrontImage" class="text-danger"></span>

                            <div id="image-preview-container" class="mt-3 text-center d-none">
                                <p class="text-muted small mb-1">Ảnh xem trước:</p>
                                <img id="image-preview" src="#" alt="Ảnh CCCD Preview"
                                     class="img-fluid border rounded shadow-sm"
                                     style="max-height: 300px; object-fit: contain;" />
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Profile" class="btn btn-secondary flex-fill">
                                <i class="bi bi-arrow-left"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success flex-fill">
                                <i class="bi bi-check-circle"></i> Kiểm tra & Xác thực
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // --- HÀM MỚI: XỬ LÝ PREVIEW ẢNH ---
        function previewImage(input) {
            var previewContainer = document.getElementById('image-preview-container');
            var previewImage = document.getElementById('image-preview');

            // Kiểm tra xem người dùng có chọn file không
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                // Khi đọc file xong thì gán vào src của thẻ img
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewContainer.classList.remove('d-none'); // Hiện ảnh lên
                }

                reader.readAsDataURL(input.files[0]); // Bắt đầu đọc file
            } else {
                // Nếu người dùng bấm Cancel khi chọn file -> Ẩn ảnh đi
                previewImage.src = '#';
                previewContainer.classList.add('d-none');
            }
        }

        // --- CODE CŨ: XỬ LÝ LOADING SPINNER ---
        document.querySelector('form').addEventListener('submit', function(e) {
            // Kiểm tra xem form có hợp lệ không (client-side validation)
            if (!this.checkValidity()) {
                return;
            }

            // Nếu form ok, hiện Loading
            document.getElementById('ai-loading').classList.remove('d-none');
            document.getElementById('ai-loading').classList.add('d-flex');

            // Disable nút submit để tránh bấm kép
            var btn = this.querySelector('button[type="submit"]');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Đang xử lý...';

            // Disable luôn nút Hủy để tránh user click lung tung khi đang loading
            this.querySelector('a.btn-secondary').classList.add('disabled');
        });
    </script>
}