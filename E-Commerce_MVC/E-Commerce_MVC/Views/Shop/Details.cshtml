@model BLL.DTOs.ProductViewModel

@{
    ViewData["Title"] = Model.ProductName;
}

<div class="container py-5">
    <div class="row gx-5">
        <div class="col-lg-6 mb-4">
            <div class="border rounded-4 p-3 bg-light text-center d-flex align-items-center justify-content-center" style="min-height: 400px;">

                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="img-fluid rounded shadow-sm" style="max-height: 500px; object-fit: contain;" alt="@Model.ProductName">
                }
                else
                {
                    <img src="https://placehold.co/600x600?text=No+Image" class="img-fluid rounded opacity-50" alt="@Model.ProductName">
                }

            </div>
        </div>

        <div class="col-lg-6">
            <div class="ps-lg-3">
                <h4 class="text-muted text-uppercase mb-2">@Model.CategoryName</h4>
                <h1 class="fw-bold mb-3">@Model.ProductName</h1>

                <div class="mb-3">
                    <span class="fs-2 fw-bold text-danger me-2">@Model.Price.ToString("N0") ₫</span>
                    @if (!string.IsNullOrEmpty(Model.Sku))
                    {
                        <span class="badge bg-secondary">SKU: @Model.Sku</span>
                    }
                </div>

                <p class="lead mb-4 text-secondary" style="font-size: 1rem;">
                    @(Model.Description ?? "Sản phẩm này chưa có mô tả chi tiết.")
                </p>

                <!-- Add-to-cart form (posts to CartController.Add) -->
                <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex gap-3 align-items-center mb-4 add-to-cart-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="number" name="quantity" class="form-control" value="1" min="1" style="width: 80px;" />
                    <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                        <i class="bi bi-cart-plus me-2"></i> Thêm vào giỏ hàng
                    </button>
                    <button type="button" class="btn btn-outline-danger btn-lg" title="Yêu thích">
                        <i class="bi bi-heart"></i>
                    </button>
                </form>

                <form asp-controller="Order"
                      asp-action="BuyNow"
                      method="post"
                      class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" value="1" />

                    <button type="submit" class="btn btn-danger btn-lg w-100">
                        <i class="bi bi-lightning-fill me-1"></i> Mua ngay
                    </button>
                </form>



                <div class="border-top pt-4 mt-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-truck text-success fs-4 me-3"></i>
                        <span>Miễn phí vận chuyển cho đơn hàng trên 500k</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-check text-primary fs-4 me-3"></i>
                        <span>Bảo hành chính hãng 12 tháng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional AJAX submit to keep user on product page and update the cart badge
        (function () {
            const form = document.querySelector('.add-to-cart-form');
            if (!form) return;

            form.addEventListener('submit', async function (e) {
                e.preventDefault();
                const fd = new FormData(form);
                try {
                    // Get antiforgery token from form hidden input
                    const token = fd.get('__RequestVerificationToken');

                    const res = await fetch(form.action, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            // send token in header that ASP.NET core antiforgery understands
                            'RequestVerificationToken': token
                        },
                        // Important: include credentials so cookies (auth cookie / jwt cookie) are sent
                        credentials: 'same-origin',
                        body: fd
                    });

                    if (!res.ok) throw new Error('Request failed');

                    const data = await res.json();
                    if (data?.success) {
                        // update cart badge if present
                        const badge = document.getElementById('cartBadge');
                        if (badge) {
                            badge.textContent = data.count ?? badge.textContent;
                            badge.style.display = (data.count ?? 0) > 0 ? 'block' : 'none';
                        }
                        // simple feedback
                        const submitBtn = form.querySelector('button[type="submit"]');
                        const original = submitBtn.innerHTML;
                        submitBtn.innerHTML = '<i class="bi bi-check-lg"></i> Đã thêm';
                        setTimeout(() => submitBtn.innerHTML = original, 1200);
                    } else {
                        alert(data?.error ?? 'Không thể thêm vào giỏ hàng');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Lỗi khi thêm vào giỏ hàng');
                }
            });
        })();
    </script>
}