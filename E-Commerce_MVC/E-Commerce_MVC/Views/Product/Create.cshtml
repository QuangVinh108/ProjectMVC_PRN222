@model BLL.DTOs.CreateProductViewModel

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div id="ai-loading" class="position-fixed top-0 start-0 w-100 h-100 d-none justify-content-center align-items-center"
     style="background: rgba(255,255,255,0.8); z-index: 9999;">
    <div class="text-center">
        <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;"></div>
        <h5 class="mt-3 text-success fw-bold">Đang phân tích sản phẩm...</h5>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle-fill me-2"></i> Thêm sản phẩm mới</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" asp-route-returnParentId="@ViewBag.ReturnParentId" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input asp-for="ProductName" class="form-control" id="inputName" placeholder="Nhập tên sản phẩm..." />
                                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Mã SKU</label>
                                        <input asp-for="Sku" class="form-control" id="inputSku" placeholder="VD: SP001" />
                                        <span asp-validation-for="Sku" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                                        <input asp-for="Price" type="number" class="form-control" id="inputPrice" step="1000" asp-format="{0:0}" />
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                                    <select asp-for="CategoryId" class="form-select" id="inputCategory" asp-items="ViewBag.Categories">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label fw-bold">Ảnh sản phẩm</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" id="imageInput" />
                                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                    <div class="form-text text-muted">Chấp nhận file ảnh (jpg, png, webp...)</div>

                                    <div id="image-preview-container" class="mt-3 text-center d-none">
                                        <img id="image-preview" src="#" alt="Ảnh sản phẩm Preview"
                                             class="img-fluid border rounded shadow-sm"
                                             style="max-height: 250px; object-fit: contain;" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Trạng thái</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="1">Hiển thị (Active)</option>
                                        <option value="0">Ẩn (Inactive)</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Mô tả sản phẩm</label>
                                    <textarea asp-for="Description" class="form-control" id="inputDesc" rows="5" placeholder="Nhập mô tả chi tiết..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index", new { parentId = ViewBag.ReturnParentId })" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Lưu sản phẩm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('imageInput').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (!file) return;

            // ===========================================
            // 1. HIỂN THỊ ẢNH PREVIEW NGAY LẬP TỨC
            // ===========================================
            var reader = new FileReader();
            reader.onload = function(e) {
                var img = document.getElementById('image-preview');
                img.src = e.target.result;
                // Hiện khung ảnh lên
                document.getElementById('image-preview-container').classList.remove('d-none');
            }
            reader.readAsDataURL(file);

            // ===========================================
            // 2. GỌI AI PHÂN TÍCH (CODE CŨ CỦA BẠN)
            // ===========================================

            // Show loading spinner
            document.getElementById('ai-loading').classList.remove('d-none');
            document.getElementById('ai-loading').classList.add('d-flex');

            var formData = new FormData();
            formData.append('file', file);

            // Call API
            fetch('/Product/AnalyzeProductImage', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(res => {
                if (res.success) {
                    const data = res.data;

                    // Auto-fill form fields
                    if(data.productName) document.getElementById('inputName').value = data.productName;
                    if(data.sku) document.getElementById('inputSku').value = data.sku;
                    if(data.price) document.getElementById('inputPrice').value = data.price;
                    if(data.description) document.getElementById('inputDesc').value = data.description;

                    // Intelligent category selection
                    if(data.category) {
                        const select = document.getElementById('inputCategory');
                        for (let i = 0; i < select.options.length; i++) {
                            if (select.options[i].text.toLowerCase().includes(data.category.toLowerCase())) {
                                select.selectedIndex = i;
                                break;
                            }
                        }
                    }
                } else {
                    console.error(res.message);
                    // Không alert lỗi nếu AI fail nhẹ, để user tự nhập
                }
            })
            .catch(err => {
                console.error(err);
                // alert("Đã xảy ra lỗi khi kết nối với AI.");
            })
            .finally(() => {
                // Hide loading spinner
                document.getElementById('ai-loading').classList.add('d-none');
                document.getElementById('ai-loading').classList.remove('d-flex');
            });
        });
    </script>
}