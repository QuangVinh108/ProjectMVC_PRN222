@using BLL.DTOs.InventoryDTOs
@model CreateInventoryDto
@{
    ViewData["Title"] = "Thêm kho hàng mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4><i class="bi bi-plus-circle"></i> Thêm kho hàng mới</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Inventory" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductId" class="form-label">Mã sản phẩm *</label>
                            <input asp-for="ProductId" class="form-control" />
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label">Số lượng tồn *</label>
                            <input asp-for="Quantity" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Warehouse" class="form-label">Kho hàng</label>
                        <input asp-for="Warehouse" class="form-control" />
                        <span asp-validation-for="Warehouse" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Hủy</a>
                        <button type="submit" class="btn btn-primary">Thêm kho</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
