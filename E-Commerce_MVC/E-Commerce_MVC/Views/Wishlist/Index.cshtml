@model IEnumerable<DAL.Entities.Wishlist>
@{
    ViewData["Title"] = "Danh sách Wishlist";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Wishlist ID</th>
            <th>User ID</th>
            <th>Sản phẩm ID</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.WishlistId</td>
                    <td>@item.UserId</td>
                    <td>@item.ProductId</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.WishlistId" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.WishlistId" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.WishlistId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center">Chưa có wishlist nào</td></tr>
        }
    </tbody>
</table>
