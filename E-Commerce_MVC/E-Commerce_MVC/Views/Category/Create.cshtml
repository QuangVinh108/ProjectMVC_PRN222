@model BLL.DTOs.CategoryDTO

@{
    ViewData["Title"] = "Thêm danh mục mới";
    int? parentId = ViewBag.ParentId;
    string parentName = ViewBag.ParentName as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-success bg-gradient text-white py-3">
                    <h5 class="mb-0 fw-bold text-center text-uppercase ls-1">
                        <i class="bi bi-plus-circle-dotted me-2"></i>Tạo Danh Mục Mới
                    </h5>
                </div>

                <div class="card-body p-4 bg-light">
                    <form asp-action="Create" method="post">

                        @if (parentId != null)
                        {
                            <input type="hidden" asp-for="ParentId" value="@parentId" />

                            <div class="alert alert-primary d-flex align-items-center shadow-sm border-0 rounded-3 mb-4" role="alert">
                                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                                <div>
                                    <small class="text-uppercase fw-bold opacity-75">Danh mục cha</small>
                                    <div class="fs-5 fw-bold text-primary">@parentName</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary d-flex align-items-center border-0 rounded-3 mb-4" role="alert">
                                <i class="bi bi-layers-fill fs-4 me-3"></i>
                                <div>
                                    <div class="fw-bold">Tạo Danh mục Gốc (Root)</div>
                                    <small>Danh mục này sẽ hiển thị ở màn hình chính.</small>
                                </div>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Tên danh mục <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-tag"></i></span>
                                <input asp-for="CategoryName" class="form-control border-start-0 ps-0 py-2" placeholder="VD: Iphone, Samsung, Gaming..." autofocus />
                            </div>
                            <span asp-validation-for="CategoryName" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Mô tả</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 text-muted pt-2 align-items-start"><i class="bi bi-text-paragraph"></i></span>
                                <textarea asp-for="Description" class="form-control border-start-0 ps-0" rows="3" placeholder="Nhập mô tả ngắn gọn..."></textarea>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <div class="d-flex justify-content-between">                           
                            <a asp-controller="Product"
                               asp-action="Index"
                               asp-route-parentId="@parentId"
                               class="btn btn-outline-secondary px-4 rounded-pill fw-bold">
                                <i class="bi bi-arrow-left me-2"></i>Quay lại
                            </a>

                            <button type="submit" class="btn btn-success bg-gradient px-4 rounded-pill fw-bold shadow-sm">
                                <i class="bi bi-check-lg me-2"></i>Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}