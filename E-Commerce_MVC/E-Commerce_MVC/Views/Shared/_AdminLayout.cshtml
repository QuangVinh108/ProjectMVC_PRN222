<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/admin.css" /> <!-- CSS riêng cho Admin -->
</head>
<body class="admin-body">
    <!-- ✅ SIDEBAR CHO ADMIN -->
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white" id="sidebar-wrapper" style="min-width: 250px;">
            <div class="sidebar-heading bg-success text-center py-3">
                <h4><i class="bi bi-shield-lock"></i> Admin Panel</h4>
            </div>
            <div class="list-group list-group-flush">
                <!-- Dashboard -->
                <a asp-controller="Admin" asp-action="Dashboard"
                   class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <!-- Quản lý Users -->
                <a asp-controller="User" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "User" ? "active" : "")">
                    <i class="bi bi-people"></i> Quản lý Users
                </a>
                <!-- Quản lý Sản phẩm -->
                <a asp-controller="Product" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" ? "active" : "")">
                    <i class="bi bi-box-seam"></i> Quản lý Sản phẩm
                </a>
                <!-- Quản lý Kho Hàng-->
                <a asp-controller="Inventory" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inventory" ? "active" : "")">
                    <i class="bi bi-boxes"></i> Quản lý Kho Hàng
                </a>
                <!-- ✅ Quản lý Đơn hàng  -->
                <a asp-controller="Order" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Order" ? "active" : "")">
                    <i class="bi bi-cart-check"></i> Quản lý Đơn hàng
                </a>

                <!-- ✅ Báo cáo -->
                <a asp-controller="Admin" asp-action="Report"
                   class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "Report" ? "active" : "")">
                    <i class="bi bi-graph-up"></i> Báo cáo
                </a>
                <a asp-controller="Admin" asp-action="Settings" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-gear"></i> Cài đặt
                </a>
                <hr class="text-white" />
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-house"></i> Về trang chủ
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" style="width: 100%;">
            <!-- ✅ NAVBAR ADMIN -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-success">
                <div class="container-fluid">
                    <button class="btn btn-success" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <span class="navbar-brand ms-3">@ViewData["Title"]</span>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Hồ sơ</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- ✅ MAIN CONTENT -->
            <div class="container-fluid mt-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="bi bi-x-circle"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#sidebar-wrapper").toggleClass("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
