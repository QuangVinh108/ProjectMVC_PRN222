@model BLL.DTOs.CreateOrderDto
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin giao hàng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label">Địa chỉ giao hàng <span class="text-danger">*</span></label>
                            <input asp-for="ShippingAddress" class="form-control" placeholder="Số nhà, tên đường..." required />
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label">Thành phố</label>
                                <input asp-for="City" class="form-control" placeholder="Hà Nội, TP.HCM..." />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label">Quốc gia</label>
                                <input asp-for="Country" class="form-control" value="Vietnam" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PostalCode" class="form-label">Mã bưu điện</label>
                            <input asp-for="PostalCode" class="form-control" placeholder="700000" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label">Phương thức thanh toán <span class="text-danger">*</span></label>
                            <select asp-for="PaymentMethod" class="form-select" required>
                                <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                                <option value="BankTransfer">Chuyển khoản ngân hàng</option>
                                <option value="CreditCard">Thẻ tín dụng</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Note" class="form-label">Ghi chú</label>
                            <textarea asp-for="Note" class="form-control" rows="3" placeholder="Ghi chú cho người giao hàng..."></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Đặt hàng
                            </button>
                            <a href="/Cart" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Tóm tắt đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <p class="mb-0"><i class="bi bi-info-circle"></i> Thông tin chi tiết sẽ được hiển thị sau khi bạn có sản phẩm trong giỏ hàng.</p>
                    </div>
                    
                    <p class="text-muted small">
                        <i class="bi bi-shield-check"></i> Thông tin của bạn được bảo mật<br/>
                        <i class="bi bi-truck"></i> Giao hàng toàn quốc<br/>
                        <i class="bi bi-arrow-clockwise"></i> Đổi trả trong 7 ngày
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
